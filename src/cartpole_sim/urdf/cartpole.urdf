<?xml version="1.0"?>
<robot name="cartpole">

  <!-- Root -->

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Cart -->

  <link name="cart">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.05"/>
      <mass value="1.0"/>
      <inertia ixx="0.02" iyy="0.02" izz="0.02"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Pole -->

  <link name="pole">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1.0" radius="0.03"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1.0" radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.5"/>
      <mass value="0.1"/>
      <inertia ixx="0.003" iyy="0.003" izz="0.001"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Cart joint -->

  <joint name="cart_joint" type="prismatic">
    <origin xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="cart"/>
    <axis xyz="1 0 0"/>
    <limit lower="-2" upper="2" effort="100" velocity="5"/>
    <dynamics damping="0.2"/>
  </joint>

  <!-- Pole joint -->

  <joint name="pole_joint" type="revolute">
    <origin xyz="0 0 0.1"/>
    <parent link="cart"/>
    <child link="pole"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="10"/>
    <dynamics damping="0.01"/>
  </joint>

  <gazebo>
  <plugin filename="libgz-sim-joint-state-publisher-system.so"
          name="gz::sim::systems::JointStatePublisher"/>
</gazebo>


</robot>
