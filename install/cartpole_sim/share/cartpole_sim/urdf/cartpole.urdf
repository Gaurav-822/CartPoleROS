<robot name="cartpole">

  <link name="world"/>

  <!-- Cart -->
  <link name="cart">

    <visual>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>

  </link>

  <!-- Pole -->
  <link name="pole">

    <visual>
      <geometry>
        <cylinder length="1.0" radius="0.03"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <cylinder length="1.0" radius="0.03"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>

  </link>

  <!-- Cart joint -->
  <joint name="cart_joint" type="prismatic">
    <parent link="world"/>
    <child link="cart"/>
    <axis xyz="1 0 0"/>
    <limit lower="-2" upper="2" effort="50" velocity="5"/>
  </joint>

  <!-- Pole joint -->
  <joint name="pole_joint" type="revolute">
    <parent link="cart"/>
    <child link="pole"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="50" velocity="10"/>
  </joint>

</robot>
